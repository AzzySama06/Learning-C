#include <stdio.h>

int main(void){
    int numero;

    printf("Digite um numero: ");
    scanf("%d", &numero);

    if (numero > 0) {
        printf("O número é positivo.\n");
    }
    else if (numero < 0){
        printf("O número é negativo.\n");
    }
    else{
        printf("o número é zero");
    }
}
